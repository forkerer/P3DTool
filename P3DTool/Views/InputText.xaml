<UserControl x:Class="P3DTool.Views.InputText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P3DTool.Views"
             mc:Ignorable="d" Background="White" Height="24" Width="255">
    <Grid>
        <TextBlock Name="Description" HorizontalAlignment="Left" Height="20" Margin="2,2,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="113"/>
        <TextBox Name="Value"  HorizontalAlignment="Left" Height="20" Margin="120,2,0,0" TextWrapping="NoWrap" Text="TextBox" VerticalAlignment="Top" Width="125" Background="White" TextChanged="Value_TextChanged"/>

    </Grid>
</UserControl>
